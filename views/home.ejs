<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Blog List</title>
</head>

<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <div class="row g-4">
            <% blogs.forEach(blog => { %>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 shadow-sm">
                        <!-- Responsive Image -->
                        <img src="<%= blog.coverImageURL %>" class="card-img-top img-fluid" alt="Cover Image">

                        <div class="card-body d-flex flex-column">
                            <!-- Blog Title -->
                            <h5 class="card-title text-truncate"><%= blog.title %></h5>

                            <!-- Example Text -->
                            <p class="card-text small text-muted">
                                <%= blog.body.length > 100 ? blog.body.substring(0, 100) + '...' : blog.body %>
                              </p>
                              

                            <!-- Buttons Group -->
                            <div class="mt-auto d-flex justify-content-between">
                                <a href="/blog/<%= blog._id %>" class="btn btn-sm btn-outline-primary">View</a>

                                <% if (locals.user) { %>
                                    <a href="/blog/delete/<%= blog._id %>" class="btn btn-sm btn-outline-danger">Delete</a>
                                    <a href="/blog/edit/<%= blog._id %>" class="btn btn-sm btn-outline-warning">Edit</a>
                                 
                                <% } %>
                                
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('./partials/script') %>
</body>

</html>
